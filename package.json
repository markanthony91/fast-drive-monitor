{
  "name": "fast-drive",
  "version": "2.0.0",
  "description": "Monitor de headset Jabra Engage 55 Mono - Bateria, Status e EstatÃ­sticas",
  "main": "main.js",
  "scripts": {
    "rebuild:node": "npm rebuild better-sqlite3",
    "rebuild:electron": "ver=$(electron --version); ver=${ver#v}; npx @electron/rebuild -o better-sqlite3 -v $ver",
    "start": "npm run rebuild:node && node src/api/server.js",
    "start:cli": "npm run rebuild:node && node src/index.js",
    "dev": "npm run rebuild:node && node --watch src/api/server.js",
    "dev:cli": "npm run rebuild:node && node --watch src/index.js",
    "electron": "npm run rebuild:electron && electron .",
    "electron:dev": "npm run rebuild:electron && NODE_ENV=development electron .",
    "build": "npm run rebuild:electron && electron-builder",
    "build:linux": "npm run rebuild:electron && electron-builder --linux",
    "build:win": "npm run rebuild:electron && electron-builder --win",
    "build:all": "npm run rebuild:electron && electron-builder --linux --win",
    "test": "npm run rebuild:node && node --test src/**/*.test.js"
  },
  "keywords": [
    "jabra",
    "headset",
    "engage-55",
    "battery",
    "monitor",
    "electron"
  ],
  "author": "Fast Drive Team",
  "license": "MIT",
  "dependencies": {
    "@gnaudio/jabra-js": "^4.4.1",
    "@gnaudio/jabra-js-properties": "^1.0.3",
    "@gnaudio/jabra-node-sdk": "^3.6.2",
    "better-sqlite3": "^9.4.3",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "rxjs": "^7.8.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.fastdrive.jabra-monitor",
    "productName": "Fast Drive - Jabra Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "main.js",
      "preload.js",
      "index.html",
      "assets/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
